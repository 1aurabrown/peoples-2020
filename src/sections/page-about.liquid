<div class="page-about">
  {% if section.settings.page_heading != blank %}
    <h1 class="page-about__heading h2 ttu">{{ section.settings.page_heading }}</h1>
  {% endif %}

  {% for block in section.blocks %}
    {% if block.type == 'image_text' %}
      {% include 'page-image-text' with 
        img: block.settings.image, 
        heading: block.settings.heading, 
        paragraph: block.settings.paragraph, 
        button_label: block.settings.button_label, 
        button_url: block.settings.button_url %}
    {% endif %}
  {% endfor %}
</div>


{% schema %}
  {
    "name": "About Page",
    "settings": [
      {
        "type": "text",
        "id": "page_heading",
        "label": "Page Heading"
      }
    ],
    "blocks": [
      {
        "type": "image_text",
        "name": "Slideshow & Text",
        "settings": [
          {
            "type": "header",
            "content": "Images"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image 1"
          },
          {
            "type": "header",
            "content": "Text"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          },
          {
            "type": "richtext",
            "id": "paragraph",
            "label": "Paragraph"
          },
          {
            "type": "text",
            "id": "button_label",
            "label": "Button Text"
          },
          {
            "type": "url",
            "id": "button_url",
            "label": "Button URL"
          }
        ]
      }
    ]
  }
{% endschema %}