{% for block in section.blocks %}
  {% assign remainder = forloop.index  | modulo: 2 %}
  {% if remainder == 0 %}
    {% assign layout = 'right' %}
  {% endif %}
  {% include 'images-with-text', settings: block.settings, layout: layout, class_name: 'about-page__section'  %}
{% endfor %}



