<footer class="footer">
  {%- assign footer_linklist = section.settings.footer_linklist -%}
  {% include 'footer-top' with nav: footer_linklist %}
  {% include 'footer-location' %}
  {% include 'footer-copyright' %}
</footer>

{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "link_list",
        "id": "footer_linklist",
        "label": "First menu",
        "default": "footer"
      },
      {
        "type": "checkbox",
        "id": "show_payment_icons",
        "label": "Show payment icons",
        "default": false
      }
    ]
  }

{% endschema %}
