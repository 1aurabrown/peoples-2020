<footer>
  {%- assign footer_linklist = section.settings.footer_linklist -%}
  {% include 'footer-top' with nav: footer_linklist %}

  <div class="footer-bottom tc-white bg-black">
    <div class="location body-wrapper half-grid">
      <div class="h1 ar">New York</div>
      <div class="h1 abs-c">‚ü∑</div>
      <div class="h1">Copenhagen</div>
    </div>
  </div>
  <div class="divider"></div>
  <div class="copyright tc-white bg-black f aic jcb fdc-m">
    <p>&copy; {{ 'now' | date: "%Y" }} {{ shop.name | link_to: '/' }}</p>
    <div class="copyright__nav">
      {% for link in linklists.copyright-menu.links %}
        <a href="{{ link.url }}">{{ link.title }}.</a>
      {% endfor %}
    </div>
  </div>
</footer>

{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "link_list",
        "id": "footer_linklist",
        "label": "First menu",
        "default": "footer"
      },
      {
        "type": "checkbox",
        "id": "show_payment_icons",
        "label": "Show payment icons",
        "default": false
      }
    ]
  }

{% endschema %}
