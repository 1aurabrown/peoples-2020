{% for link in linklists[section.settings.right_menu].links %}
  {% if link.title == 'Search' %}
    <li>
      {% include 'search-form' %}
    </li>
  {% elsif link.links != blank %}
    <li>
      <a href="{{ link.url }}">
        {{ link.title }}
        {% include 'icon-arrow-down' %}
      </a>
      <ul>
        {% for childlink in link.links %}
          <li>
            <a href="{{ childlink.url }}">
              {{ childlink.title }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </li>
  {% else %}
    <li>
      <a href="{{ link.url }}">
        {{ link.title }}
      </a>
    </li>
  {% endif %}
{% endfor %}